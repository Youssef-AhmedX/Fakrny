@inherits BasePage<ReferenceLinkDto>

<MudDialog>
    <DialogContent>
        @if (referenceLinkForm is null)
        {
            <MudCard Outlined="true" Style="border:0px;text-align:center">
                <MudCardContent>
                    <MudProgressCircular Color="Color.Info" Style="height:70px;width:70px;" Indeterminate="true" />
                </MudCardContent>
                <MudCardActions>
                </MudCardActions>
            </MudCard>
        }
        else
        {
            <MudCard Style="border:0px;" Outlined="true">
                <EditForm Model="@referenceLinkForm" OnValidSubmit="OnValidSubmit">
                    <DataAnnotationsValidator />
                    <MudCardContent Style="padding-top: 0px">
                        <MudTextField @bind-Value="referenceLinkForm.Link" For="@(() => referenceLinkForm.Link)" />
                    </MudCardContent>
                    <MudCardActions>
                        <MudCheckBox Dense="true" @bind-Checked="@referenceLinkForm.IsDeleted" For="@(() => referenceLinkForm.IsDeleted)" Label="Mark As Deleted" Color="Color.Error"></MudCheckBox>
                        <MudSpacer />
                        <MudButton Class="me-1" Variant="Variant.Outlined" OnClick="Cancel">Cancel</MudButton>
                        <MudButton Variant="isDisable ? Variant.Text : Variant.Outlined" ButtonType="ButtonType.Submit" Disabled="isDisable" Color="Color.Success">
                            @if (isDisable)
                            {
                                <MudProgressCircular Color="Color.Success" Size="Size.Small" Indeterminate="true" />
                            }
                            else
                            {
                                <MudText>Submit</MudText>
                            }
                        </MudButton>
                    </MudCardActions>
                </EditForm>
            </MudCard>
        }
    </DialogContent>
    <DialogActions>
    </DialogActions>
</MudDialog>